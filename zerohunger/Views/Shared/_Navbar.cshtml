<style>
    /* Navbar styles */
    .navbar {
        padding: 15px 30px;
    }

    .navbar-brand {
        font-size: 24px;
        font-weight: bold;
        color: #ffffff !important;
    }

    /* Button styles */
    .custom-button {
        font-size: 16px;
        padding: 12px 25px;
        border-radius: 30px; /* Rounded buttons */
        margin: 0 15px; /* Add spacing between buttons */
        font-weight: bold;
        text-transform: uppercase;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease-in-out;
    }

        .custom-button:hover {
            transform: translateY(-3px); /* Lift effect */
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
            opacity: 0.9;
        }

    .btn-info {
        background-color: #3498db;
        border: none;
    }

    .btn-success {
        background-color: #2ecc71;
        border: none;
    }

    .btn-warning {
        background-color: #f1c40f;
        border: none;
    }

    .navbar-nav {
        justify-content: center; /* Center-align the buttons */
        gap: 20px; /* Add gap between buttons */
    }
</style>

<nav class="navbar navbar-expand-lg bg-dark">
    <div class="container-fluid">
        @Html.ActionLink("NGO", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mx-auto">
                <!-- NGO Login Button -->
                <li class="nav-item">
                    <a href="@Url.Action("NGOLogin", "Login")" class="btn btn-info custom-button">Sign In As NGO</a>
                </li>
                <!-- Employee Login Button -->
                <li class="nav-item">
                    <a href="@Url.Action("EmployeeLogin", "Login")" class="btn btn-success custom-button">Sign In As Employee</a>
                </li>
                <!-- Restaurant Login Button -->
                <li class="nav-item">
                    <a href="@Url.Action("RestaurantLogin", "Login")" class="btn btn-warning custom-button">Sign In As Restaurant</a>
                </li>
            </ul>
        </div>
    </div>
</nav>
